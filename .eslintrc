{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb",
  "globals": {
    "FB": true
  },
  "rules": {
    "react/require-extension": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "jsx-quotes": 1,
    "react/jsx-": 0,
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "arrow-body-style": [
      "error",
      "always"
    ],
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": [
          "Map",
          "List"
        ]
      }
    ],
    "quote-props": [
      "error",
      "consistent",
      {
        "numbers": true
      }
    ],
    "space-in-parens": [
      "error",
      "always"
    ]
  }
}
